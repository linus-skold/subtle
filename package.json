{
  "name": "subtle",
  "private": true,
  "version": "0.2.1-beta.4",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build:electron": "vite build --config ./vite.electron.config.ts && vite build --config ./vite.preload.config.ts && electron-rebuild --only better-sqlite3",
    "dev:electron": "electron ./build/main.js",
    "predev": "npm run build:electron",
    "next:dev": "next dev apps/next --turbopack",
    "dev": "concurrently --names \"CLIENT,SERVER\" --prefix-colors \"blue,green\" -k \"npm run next:dev\" \"npm run dev:electron\"",
    "build": "next build apps/next",
    "build:all": "npm run build && npm run build:electron",
    "dist": "npm run build:all && electron-builder",
    "dist:win": "npm run build:all && electron-builder --win",
    "publish": "npm run build:all && electron-builder --publish=always",
    "start": "next start apps/next"
  },
  "build": {
    "appId": "com.subtle.app",
    "productName": "Subtle",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "apps/next/out/**/*",
      "node_modules/**/*",
      "package.json",
      "!**/*.db",
      "!**/*.db-*"
    ],
    "extraResources": [
      {
        "from": "apps/next/out",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "drizzle/migrations",
        "to": "drizzle/migrations",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "linus-skold",
        "repo": "subtle"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.5.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@editorjs/editorjs": "^2.30.8",
    "@headlessui/react": "^2.2.3",
    "@heroicons/react": "^2.2.0",
    "@libsql/client": "^0.15.9",
    "better-sqlite3": "^11.10.0",
    "drizzle-orm": "^0.44.2",
    "drizzle-zod": "^0.8.2",
    "electron-updater": "^6.6.2",
    "luxon": "^3.6.1",
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.25.63"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@next/eslint-plugin-next": "^15.2.3",
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/better-sqlite3": "^7.6.13",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "node-notifier": "^10.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.19.4",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.3.5"
  }
}
