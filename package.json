{
  "name": "subtle-todo",
  "private": true,
  "version": "0.2.1-beta.4",
  "type": "module",
  "main": "src/app.ts",
  "scripts": {
    "build:electron": "tsc -p ./electron/tsconfig.json && tsx ./scripts/rename.ts",
    "dev:electron": "electron ./build/electron/main.cjs",
    "predev": "npm run build:electron",
    "dev": "concurrently \"next dev --turbopack\" \"npm run dev:electron\"",
    "next:dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "version:beta": "tsx ./scripts/sync-version.ts",
    "version:release": "tsx ./scripts/sync-version.ts --release"
  },
  "dependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.5.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@editorjs/editorjs": "^2.30.8",
    "@headlessui/react": "^2.2.3",
    "@heroicons/react": "^2.2.0",
    "@next/font": "^14.2.15",
    "better-sqlite3": "^11.10.0",
    "luxon": "^3.6.1",
    "next": "^15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@next/eslint-plugin-next": "^15.2.3",
    "@tailwindcss/postcss": "^4.0.15",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^36.3.2",
    "eslint": "^9.21.0",
    "eslint-config-next": "^15.2.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "node-notifier": "^10.0.1",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.15",
    "tsx": "^4.19.4",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
