{
  "compilerOptions": {
    "outDir": "../build",
    "module": "esnext",        
    "target": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": false,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["../db/*"],
    }
  },
  "include": ["src/**/*", "../db"]
}